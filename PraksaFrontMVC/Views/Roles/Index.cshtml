@model IEnumerable<PraksaFrontMVC.Models.Role>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/css/radneAkcijeStyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/home.css" />
    <title>Uloge</title>
</head>
<div class="card-header" style="border:1px solid rgba(0,0,0,0.1)">
    <h1>Uloge</h1>
</div>

<p>
    <a class="workButton" asp-action="Create" asp-route-userId="@ViewBag.userId">Dodaj ulogu</a>
</p>
<div class="card-body">
    <div class="dataTable-wrapper dataTable-loading no-footer sortable searchable fixed-columns">
        <div class="dataTable-container">
            <table class="dataTable-table table-striped">
                <thead>
                    <tr style="background-color: #6bc277;">
                        <th>
                            Ime Uloge
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <form asp-action="Delete" asp-route-id="@item.Id" asp-route-userId="@ViewBag.userId">
                                    <input type="hidden" />
                                    <input type="submit" value="Obriši" onclick="confirm('Jeste li sigurni da želite obrisati ulogu?')" class="btn btn-danger" /> 
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>