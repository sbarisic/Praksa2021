@model IEnumerable<PraksaFrontMVC.Models.Role>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/css/radneAkcijeStyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/home.css" />
    <title>Uloge</title>
</head>
<div class="card-header" style="border:1px solid rgba(0,0,0,0.1)">
    <h1>Uloge</h1>
</div>

<p>
    <a asp-action="Create">Stvori Ulogu</a>
</p>
<div class="card-body">
    <div class="dataTable-wrapper dataTable-loading no-footer sortable searchable fixed-columns">
        <div class="dataTable-container">
            <table class="dataTable-table table-striped">
                <thead>
                    <tr style="background-color: #6bc277;">
                        <th>
                            Ime Uloge
                        </th>
                        <th>
                            ID Uloge
                        </th>
                        <th>
                            ID Korisnika
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdRole)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdUser)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Uredi</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Detalji</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Ibriši</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>