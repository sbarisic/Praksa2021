@model PraksaFrontMVC.Models.ContactEmail

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ContactEmail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none;">
                <label asp-for="IdUser" class="control-label"></label>
                <input asp-for="IdUser" value="@ViewBag.userId" class="form-control" />
                <span asp-validation-for="IdUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" style="font-variant:small-caps" value="Save" class="btn btn-primary" formmethod="post" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="workButton" style="font-variant:small-caps" asp-controller="ContactEmails" asp-action="Index" asp-route-id="@ViewBag.userId">go back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
