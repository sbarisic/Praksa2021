@model PraksaFrontMVC.Models.Permit

@{
    ViewData["Title"] = "Delete";
}
<head>
    <link href="~/css/loginStyle.css" rel="stylesheet" />
    <link href="~/css/createStyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/home.css" />
</head>

<div class="card-header" style="border:1px solid rgba(0,0,0,0.1)">
    <h1 class="create-header">Brisanje</h1>
</div>

<h3>Jeste li sigurni da želite obrisati ovu dozvolu?</h3>
<div class="create-wrap">
    <hr />
    <dl class="row">
        <dt class="col-sm-2 fontGreen">
            @Html.DisplayNameFor(model => model.ExpiryDate):
        </dt>
        <dd class="col-sm-10 normal-variant">
            @Html.DisplayFor(model => model.ExpiryDate)
        </dd>
        <dt class="col-sm-2 fontGreen">
            Ime i prezime:
        </dt>
        <dd class="col-sm-10 normal-variant">
            @ViewBag.userName
        </dd>
        <dt class="col-sm-2 fontGreen">
            @Html.DisplayNameFor(model => model.PermitName):
        </dt>
        <dd class="col-sm-10 normal-variant">
            @Html.DisplayFor(model => model.PermitName)
        </dd>
        <dt class="col-sm-2 fontGreen">
            @Html.DisplayNameFor(model => model.PermitNumber):
        </dt>
        <dd class="col-sm-10 normal-variant">
            @Html.DisplayFor(model => model.PermitNumber)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="IdUser" />
        <input type="submit" value="Delete" formmethod="post" class="btn btn-danger" /> |
        <a class="workButton" style="font-variant:small-caps" asp-controller="Permits" asp-action="Index" asp-route-id="@ViewBag.userId">Nazad</a>
    </form>
</div>
