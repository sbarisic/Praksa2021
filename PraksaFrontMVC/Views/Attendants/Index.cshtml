@model IEnumerable<PraksaFrontMVC.Models.Attendant>

@{
    ViewData["Title"] = "Index";
}

<head>
    <link href="~/css/radneAkcijeStyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/home.css" />
    <title>Dolaznici</title>
</head>
<div class="card-header" style="border:1px solid rgba(0,0,0,0.1)">
    <h1>Dolaznici</h1>
</div>

<div class="card-body">
    <div class="dataTable-wrapper dataTable-loading no-footer sortable searchable fixed-columns">
        <div class="dataTable-container">
            <table class="dataTable-table table-striped">
                <thead>
                    <tr style="background-color: #6bc277;">
                        <th>
                            Ime
                        </th>
                        <th>
                            Prezime
                        </th>
                        <th>
                            Interes
                        </th>
                        <th>
                            Vrijeme Odabira
                        </th>
                        <th width="350px">
                            Dolaznost
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserFirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserLastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Interes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SelectionTime)
                        </td>
                        <td>
                            @if (item.IdAttendance == 2)
                            {
                                <a href="@Url.Action("UserCome", "Attendants", new { workId=item.IdJob, userId=item.IdUser, isCalendar=0})" class="workButton"
                                   style="font-variant: small-caps; margin:5px; background-color:#32a852!important">Došao</a>
                                <a href="@Url.Action("UserNotCome", "Attendants", new { workId=item.IdJob, userId=item.IdUser, isCalendar=0})" class="workButton"
                                   style="font-variant: small-caps; margin: 5px; background-color: #badbc3 !important ">Nije došao</a>
                            }
                            else if (item.IdAttendance == 3)
                            {
                                <a href="@Url.Action("UserCome", "Attendants", new { workId=item.IdJob, userId=item.IdUser, isCalendar=0})" class="workButton"
                                   style="font-variant: small-caps; margin: 5px; background-color: #badbc3 !important">Došao</a>
                                <a href="@Url.Action("UserNotCome", "Attendants", new { workId=item.IdJob, userId=item.IdUser, isCalendar=0})" class="workButton"
                                   style="font-variant: small-caps; margin: 5px; background-color: #32a852 !important">Nije došao</a>
                            }
                            else
                            {
                                <a href="@Url.Action("UserCome", "Attendants", new { workId=item.IdJob, userId=item.IdUser, isCalendar=0})" class="workButton"
                                   style="font-variant: small-caps; margin: 5px;">Došao</a>
                                <a href="@Url.Action("UserNotCome", "Attendants", new { workId=item.IdJob, userId=item.IdUser, isCalendar=0})" class="workButton"
                                   style="font-variant: small-caps; margin: 5px;">Nije došao</a>
                            }
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>