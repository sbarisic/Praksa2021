@model PraksaFrontMVC.Models.Work

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/css/loginStyle.css" rel="stylesheet" />
    <link href="~/css/createStyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/home.css" />
</head>

<div class="card-header" style="border:1px solid rgba(0,0,0,0.1)">
    <h1 class="create-header">Uredi</h1>
</div>

<div class="create-wrap">
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label class="control-label fontGreen">Naziv akcije</label>
                    <input asp-for="Name" class="form-control rounded-left" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label fontGreen">Datum</label>
                    <input asp-for="Date" class="form-control rounded-left" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label fontGreen">Vrijeme</label>
                    <input asp-for="Time" class="form-control rounded-left" />
                    <span asp-validation-for="Time" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label fontGreen">Opis</label>
                    <input asp-for="Description" class="form-control rounded-left" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label fontGreen">Lokacija</label>
                    <input asp-for="Location" class="form-control rounded-left" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.RadioButtonFor(m => m.Obligation, "Obavezno")<label class="control-label fontGreen">Obavezno</label><br />
                    @Html.RadioButtonFor(m => m.Obligation, "Neobavezno")<label class="control-label fontGreen">Nije obavezno</label>
                </div>
                <div class="form-group">
                    <input type="submit" style="font-variant:small-caps" value="Spremi" class="btn btn-primary" formmethod="post" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn btn-primary" asp-action="AdminIndex">Nazad na Listu</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

</div>