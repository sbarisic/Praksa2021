@model PraksaFrontMVC.Models.Work

@{
    ViewData["Title"] = "Create";
}
<head>
    <link href="~/css/loginStyle.css" rel="stylesheet" />
    <link href="~/css/createStyle.css" rel="stylesheet" />
    <link href="~/css/radneAkcijeStyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/home.css" />
</head>

<div class="card-header" style="border:1px solid rgba(0,0,0,0.1)">
    <h1 class="create-header">Nova radna akcija</h1>
</div>

<div class="create-wrap">
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label fontGreen"></label>
                    <input asp-for="Name" class="form-control rounded-left" placeholder="Name..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label fontGreen"></label>
                    <input asp-for="Description" class="form-control rounded-left" placeholder="Opis..." />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Location" class="control-label fontGreen"></label>
                    <input asp-for="Location" class="form-control rounded-left" placeholder="Lokacija..." />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date" class="control-label fontGreen"></label>
                    <input asp-for="Date" type="date" class="form-control rounded-left" placeholder="Datum..." />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Time" class="control-label fontGreen"></label>
                    <input asp-for="Time" type="time" class="form-control rounded-left" placeholder="Vrijeme..." />
                    <span asp-validation-for="Time" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Obligation" class="control-label fontGreen"></label>
                    <input asp-for="Obligation" class="form-control rounded-left" placeholder="Obveznost..." />
                    <span asp-validation-for="Obligation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" style="font-variant:small-caps" formmethod = "post" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn btn-primary" asp-action="Index">Nazad na listu</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

</div>