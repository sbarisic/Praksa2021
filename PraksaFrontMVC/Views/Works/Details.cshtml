@model PraksaFrontMVC.Models.Work

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="~/css/loginStyle.css" rel="stylesheet" />
    <link href="~/css/createStyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/home.css" />
</head>

<div class="card-header" style="border:1px solid rgba(0,0,0,0.1)">
    <h1 class="create-header">Detalji</h1>
</div>

<div class="create-wrap">
    <hr />
    <div>
        <dl class="row">
            <dt class="col-sm-2 fontGreen">
                Nazvi Akcije
            </dt>
            <dd class="col-sm-10 normal-variant">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2 fontGreen">
                Datum
            </dt>
            <dd class="col-sm-10 normal-variant">
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dt class="col-sm-2 fontGreen">
                Vrijeme
            </dt>
            <dd class="col-sm-10 normal-variant">
                @Html.DisplayFor(model => model.Time)
            </dd>
            <dt class="col-sm-2 fontGreen">
                Opis
            </dt>
            <dd class="col-sm-10 normal-variant">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2 fontGreen">
                Lokacija
            </dt>
            <dd class="col-sm-10 normal-variant">
                @Html.DisplayFor(model => model.Location)
            </dd>
            <dt class="col-sm-2 fontGreen">
                Obveznost
            </dt>
            <dd class="col-sm-10 normal-variant">
                @Html.DisplayFor(model => model.Obligation)
            </dd>
        </dl>
    </div>
    <div>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Uredi</a> <br /><br />
        <a class="btn btn-primary" asp-action="AdminIndex">Nazad na Listu</a>
    </div>
</div>