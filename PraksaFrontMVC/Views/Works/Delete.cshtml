@model PraksaFrontMVC.Models.Work

@{
    ViewData["Title"] = "Delete";
}

<head>
    <link href="~/css/loginStyle.css" rel="stylesheet" />
    <link href="~/css/createStyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/home.css" />
</head>

<div class="card-header" style="border:1px solid rgba(0,0,0,0.1)">
    <h1 class="create-header">Brisanje</h1>
</div>

<h3>Jeste li sigurni da želite obrisati ovu radnu akciju?</h3>
<div class="create-wrap">
    <hr />
    <dl class="row">
        <dt class="col-sm-2 fontGreen">
            @Html.DisplayNameFor(model => model.Name):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2 fontGreen">
            @Html.DisplayNameFor(model => model.Date):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2 fontGreen">
            @Html.DisplayNameFor(model => model.Time):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class="col-sm-2 fontGreen">
            @Html.DisplayNameFor(model => model.Description):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2 fontGreen">
            @Html.DisplayNameFor(model => model.Location):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-2 fontGreen">
            @Html.DisplayNameFor(model => model.Obligation):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Obligation)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" /><br />
        <input type="submit" value="Delete" class="btn btn-danger" style="font-variant:small-caps" formmethod="post" /> |
        <a class="btn btn-primary" asp-action="Index">Back to List</a>
    </form>
</div>
