@model PraksaFrontMVC.Models.Person

@{
    ViewData["Title"] = "Details";
}

<head>
    <link href="~/css/loginStyle.css" rel="stylesheet" />
    <link href="~/css/createStyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/home.css" />
</head>

<div class="card-header" style="border:1px solid rgba(0,0,0,0.1)">
    <h1 class="create-header">Detalji</h1>
</div>

<div class="create-wrap">
    <hr />
    <dl class="row">
        <dt class="col-sm-2 fontGreen">
            JMBAC
        </dt>
        <dd class="col-sm-10 normal-variant">
            @Html.DisplayFor(model => model.UniqueId)
        </dd>
        <dt class="col-sm-2 fontGreen">
            Ime
        </dt>
        <dd class="col-sm-10 normal-variant">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2 fontGreen">
            Prezime
        </dt>
        <dd class="col-sm-10 normal-variant">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2 fontGreen">
            Adresa
        </dt>
        <dd class="col-sm-10 normal-variant">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2 fontGreen">
            OIB
        </dt>
        <dd class="col-sm-10 normal-variant">
            @Html.DisplayFor(model => model.Oib)
        </dd>
        <dt class="col-sm-2 fontGreen">
            Email
        </dt>
        <dd class="col-sm-10 normal-variant">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2 fontGreen">
            Kontakt broj
        </dt>
        <dd class="col-sm-10 normal-variant">
            @Html.DisplayFor(model => model.Number)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Uredi</a> <br /><br />
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
