@model PraksaFrontMVC.Models.Person

@{
    ViewData["Title"] = "Delete";
}

<head>
    <link href="~/css/loginStyle.css" rel="stylesheet" />
    <link href="~/css/createStyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/home.css" />
</head>

<div class="card-header" style="border:1px solid rgba(0,0,0,0.1)">
    <h1 class="create-header">Brisanje</h1>
</div>

<h3>Jeste li sigurni da želite obrisati ovog korisnika?</h3>
<div class="create-wrap">
    <hr />
    <dl class="row">
        <dt class="col-sm-2 fontGreen">
            JMBAC:
        </dt>
        <dd class="col-sm-10 normal-variant">
            @Html.DisplayFor(model => model.UniqueId)
        </dd>
        <dt class="col-sm-2 fontGreen">
            Ime:
        </dt>
        <dd class="col-sm-10 normal-variant">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2 fontGreen">
            Prezime:
        </dt>
        <dd class="col-sm-10 normal-variant">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2 fontGreen">
            Adresa:
        </dt>
        <dd class="col-sm-10 normal-variant">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2 fontGreen">
            OIB:
        </dt>
        <dd class="col-sm-10 normal-variant">
            @Html.DisplayFor(model => model.Oib)
        </dd>
        <dt class="col-sm-2 fontGreen">
            E-Mail:
        </dt>
        <dd class="col-sm-10 normal-variant">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2 fontGreen">
            Kontakt broj:
        </dt>
        <dd class="col-sm-10 normal-variant">
            @Html.DisplayFor(model => model.Number)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" /><br />
        <input type="submit" value="Delete" class="btn btn-danger" style="font-variant:small-caps" formmethod="post" /> |
        <a class="btn btn-primary" asp-action="Index">Back to List</a>
    </form>
</div>
